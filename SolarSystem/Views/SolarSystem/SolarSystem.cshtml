@{
    ViewData["Title"] = "Start Your Journey";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/SolarSystem.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="main-content">
        <header>
            <h1>Explore the Solar System</h1>
        </header>
        <main>
            <section id="hero">
                <h2>Our Solar System</h2>
                <div class="solar-system-gif">
                    <!-- Add any GIF or animation here if needed -->
                </div>
                <button id="exploreButton" class="btn btn-primary">Explore</button>
            </section>
            <section id="exploration-area">
                <div id="loading-planets" style="display: none;">Loading planets...</div>
                <div id="planets-container">
                    <h2>Planets</h2>
                    <ul id="planetList" class="list-unstyled"></ul>
                </div>
                <div id="moons-container" style="display: none;">
                    <h2>Moons of <span id="selected-planet"></span></h2>
                    <ul id="moonList" class="list-unstyled"></ul>
                    <button id="back-to-planets" class="btn btn-secondary mt-3">Back to Planets</button>
                </div>
            </section>
        </main>
        <footer>
            <p>&copy; 2024 Your Name. All rights reserved.</p>
        </footer>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/js/solarSystem.js" asp-append-version="true"></script>
</body>
</html>