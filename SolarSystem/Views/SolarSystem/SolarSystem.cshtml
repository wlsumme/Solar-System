@{
    ViewData["Title"] = "Solar System Explorer";
}

<div class="content-wrapper">
    <div class="star-field"></div>

    <main class="main-content">
        <h1>@ViewData["Title"]</h1>

        <div id="planets-container">
            <div class="planet-item" id="mercury">
                <div class="planet-gif-container">
                    <iframe src="https://giphy.com/embed/l0HlO4V8iCRME3i0g" class="planet-gif" frameBorder="0" allowFullScreen></iframe>
                </div>
                <h3>Mercury</h3>
            </div>
            <div class="planet-item" id="venus">
                <div class="planet-gif-container">
                    <iframe src="https://giphy.com/embed/l0MYB89UFsVqLY5oc" class="planet-gif" frameBorder="0" allowFullScreen></iframe>
                </div>
                <h3>Venus</h3>
            </div>
            <div class="planet-item" id="earth">
                <div class="planet-gif-container">
                    <iframe src="https://giphy.com/embed/3o7WIB00yXujVt4WEo" class="planet-gif" frameBorder="0" allowFullScreen></iframe>
                </div>
                <h3>Earth</h3>
            </div>
            <div class="planet-item" id="mars">
                <div class="planet-gif-container">
                    <iframe src="https://giphy.com/embed/Wkcw6SzOtaSxG" class="planet-gif" frameBorder="0" allowFullScreen></iframe>
                </div>
                <h3>Mars</h3>
            </div>
            <div class="planet-item" id="jupiter">
                <div class="planet-gif-container">
                    <iframe src="https://giphy.com/embed/s2uampOAMWksU" class="planet-gif" frameBorder="0" allowFullScreen></iframe>
                </div>
                <h3>Jupiter</h3>
            </div>
            <div class="planet-item" id="saturn">
                <div class="planet-gif-container">
                    <iframe src="https://giphy.com/embed/l0MYRaQ9utfynYpxe" class="planet-gif" frameBorder="0" allowFullScreen></iframe>
                </div>
                <h3>Saturn</h3>
            </div>
            <div class="planet-item" id="uranus">
                <div class="planet-gif-container">
                    <iframe src="https://giphy.com/embed/KYjlYCFauH49W" class="planet-gif" frameBorder="0" allowFullScreen></iframe>
                </div>
                <h3>Uranus</h3>
            </div>
            <div class="planet-item" id="neptune">
                <div class="planet-gif-container">
                    <iframe src="https://giphy.com/embed/U3tFXa9GHZAKSU0dfy" class="planet-gif" frameBorder="0" allowFullScreen></iframe>
                </div>
                <h3>Neptune</h3>
            </div>
        </div>

        <button id="startJourneyButton">Start Journey</button>

        <div id="planet-info"></div>
        <div id="moons-container"></div>
    </main>
</div>

<footer>
    <p>© 2024 Solar System Explorer</p>
</footer>